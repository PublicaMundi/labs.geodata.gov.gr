
# Loopback interface
auto lo
iface lo inet loopback


# Public IPv6 interface
auto {{networking.public_ipv6.iface}}
iface {{networking.public_ipv6.iface}} inet6 auto


{% if networking.public_ipv4.iface -%}
# Public IPv4 interface
auto {{networking.public_ipv4.iface}}
iface {{networking.public_ipv4.iface}} inet dhcp
{%- endif %} 


# Internal IPv4 interface
auto {{networking.internal_ipv4.iface}}
iface {{networking.internal_ipv4.iface}} inet static
   address {{networking.internal_ipv4.address| mandatory}}
   network {{networking.internal_ipv4.network| mandatory}}
   netmask {{networking.internal_ipv4.netmask| mandatory}}
   {% if not networking.public_ipv4.iface -%}
   # Provide a gateway for IPv4 routing
   gateway {{networking.internal_ipv4.gateway}}
   # Provide DNS nameservers
   dns-nameservers {{nameservers| default(['8.8.8.8'])| join(" ")}}
   {% endif -%}

